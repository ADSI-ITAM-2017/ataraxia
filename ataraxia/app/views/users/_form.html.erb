<%= form_for :user, url: users_create_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
	<%= f.radio_button :gender, "0"%>
	<%= label_tag(:gender_female, "Female")%>
	<%= f.radio_button :gender, "1"%>
	<%= label_tag(:gender_male, "Male")%>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= password_field(:user, :password, size: 20) %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
